{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Django Backend",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": [
        "${workspaceFolder}/octofit-tracker/backend/manage.py",
        "runserver",
        "0.0.0.0:8000"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Starting development server.*$",
          "endsPattern": "^.*Quit the server.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
